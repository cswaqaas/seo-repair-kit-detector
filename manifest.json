{
  "manifest_version": 3,
  "name": "SEO Repair Kit Detector",
  "version": "1.0.0",
  "description": "Detects if the SEO Repair Kit plugin is installed on the current website",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
